{
    "name": "toei-jp/portal",
    "description": "Toei Portal Frontend",
    "type": "project",
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": {
            "Toei\\Portal\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require": {
        "php": "~7.2",
        "slim/slim" : "^3.12",
        "slim/twig-view": "^2.5",
        "twig/extensions": "^1.5",
        "vlucas/phpdotenv": "^3.6",
        "monolog/monolog": "^2.1",
        "doctrine/orm": "^2.7",
        "microsoft/azure-storage-blob": "^1.5",
        "guzzlehttp/guzzle": "^6.5",
        "blue32a/monolog-azure-blob": "^0.2.0"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.5",
        "phpunit/phpunit": "^8.5",
        "mockery/mockery": "^1.3",
        "phpstan/phpstan": "^0.12.28",
        "phpstan/phpstan-doctrine": "^0.12.14",
        "phpstan/phpstan-phpunit": "^0.12.11",
        "phpstan/phpstan-mockery": "^0.12.5"
    },
    "scripts": {
        "phpcs": "vendor/bin/phpcs --standard=phpcs.xml",
        "phpcbf": "vendor/bin/phpcbf --standard=phpcs.xml",
        "phpstan": "vendor/bin/phpstan analyse -n --no-progress -c phpstan.neon --memory-limit=256M",
        "phpunit": "vendor/bin/phpunit"
    }
}
