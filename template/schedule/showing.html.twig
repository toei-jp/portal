{% extends "layout.html.twig" %}

{% block title %}上映中作品 | {{ parent() }}{% endblock %}

{% block description %} TOEI THEATERSの上映中作品ページです。上映中の映画作品のご案内{% endblock %}

{% block keywords %}{{ parent()}},上映中,公開中,作品情報,{% endblock %}

{% block css %}
<link href="/css/now-showing.css" rel="stylesheet">
{% endblock %}

{% block javascript %}
<script src="/js/now-showing.js"></script>
{% endblock %}

{% block contents %}
<div class="py-3">
    <div class="base-width mx-auto px-3">
        <ul class="breadcrumb-list text-small">
            <li>
                <a class="text-light-blue" href="{{ path_for('homepage') }}">
                    <span>ホーム</span>
                </a>
            </li>
            <li>
                <span>上映中作品</span>
            </li>
        </ul>
    </div>
</div>

<div class="py-4 text-ultra-dark-gray">
    <div class="base-width mx-auto px-3">
        <h2 class="text-large text-center"><strong>上映中作品</strong></h2>
    
    {% for schedule in schedules %}
        {% include "schedule/include/row.html.twig" with {
            schedule: schedule,
            theaters: theaters,
        } only %}
    {% endfor %}
    
    </div>
</div>
{% endblock %}
