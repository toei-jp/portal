<div class="bg-ultra-light-gray py-5">
    <div class="base-width mx-auto px-3">
        <h2 class="d-flex text-large mb-4 align-items-center justify-content-center"><img class="mr-2" src="/images/portal-top/icon_top_05.svg"><strong>劇場選択</strong></h2>
        <div class="d-md-flex theater-selection">
        
        {% for theater in theaters %}
            <a class="d-block w-100 mr-md-2" href="{{ path_for('theater', { name: theater.getName() }) }}">
                <div class="d-flex align-items-center bg-dark-gold theater p-4 mb-3 mb-md-0">
                    <div class="place mr-4">
                        <img class="rounded-circle" src="/images/portal-top/{{ theater.getName() }}.jpg">
                    </div>
                    <p class="text-white mb-0"><span class="text-x-large">{{ theater.getNameJa() }} TOEI</span><br><span class="text-x-small">をご利用の方はこちら</span></p>
                    <div class="next-button ml-auto mr-1">
                        <img src="/images/common/next_01.svg">
                    </div>
                </div>
            </a>
        {% endfor %}
        
        </div>
    </div>
</div>