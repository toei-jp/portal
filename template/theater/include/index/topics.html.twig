{% if topics|length > 0 %}
<div class="bg-super-light-orange py-5">
    <div class="base-width mx-auto px-3">
        <h2 class="d-flex text-large mb-4 align-items-center justify-content-center">
            <img class="mr-2" src="/images/portal-top/icon_top_07.svg"><strong>トピックス</strong></h2>
        <div class="py-2">
            <ul class="border-top border-dark-gold topics mb-4">
            
            {% for news in topics %}
                {% set detailLink = path_for('theater_topic_detail', {
                    name: theater.getName(),
                    id: news.getId()
                }) %}
                <li class="border-bottom border-dark-gold">
                    <a class="d-block d-md-flex align-items-center justify-content-between text-ultra-dark-gray py-3 pl-3 pr-5 pr-md-3"
                        href="{{ detailLink }}">
                        <div class="mb-2 mb-md-0">{{ news.getStartDt()|date('y/m/d') }}</div>
                        <p class="mb-0">{{ news.getHeadline() }}</p>
                        <div class="text-light-blue text-right d-none d-md-block">
                            <span class="arrow-blue">さらに詳しく</span>
                        </div>
                    </a>
                </li>
            {% endfor %}
                
            </ul>
        </div>
    </div>
</div>
{% endif %}